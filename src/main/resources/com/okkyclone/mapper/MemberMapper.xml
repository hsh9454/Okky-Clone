<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.okkyclone.mapper.MemberMapper">

    <select id="login" parameterType="com.okkyclone.domain.MemberVO" resultType="com.okkyclone.domain.MemberVO">
        SELECT 
            USER_ID as id, 
            USER_PW as pw, 
            USER_NAME as name 
        FROM MEMBER 
        WHERE USER_ID = #{id} AND USER_PW = #{pw}
    </select>

</mapper>